@model bool?

<div style="padding:1px 0 6px 0;">
    <span class="checkbox c-checkbox">
        <label>
            <input id="@Html.IdForModel()" name="@Html.NameForModel()" type="checkbox" value="True" checked="@Model">
            <span class="fa fa-check"></span>
        </label>
    </span>
    <input id="@Html.IdForModel()" name="@Html.NameForModel()" type="hidden" value="False" checked="@Model">
</div>